{
  "name": "cloudflare-workers-playground",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "NO_D1_WARNING=true wrangler dev --local --persist",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier --check src",
    "fmt": "npm-run-all -s fmt:*",
    "fmt:eslint": "eslint --fix .",
    "fmt:prettier": "prettier --write .",
    "generate": "npm-run-all -p generate:*",
    "generate:orm": "drizzle generate:sqlite",
    "migration": "wrangler d1 migration"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.3",
    "better-sqlite3": "^8.4.0",
    "drizzle-orm": "^0.26.5",
    "hono": "^3.2.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@naporin0624/eslint-config": "^0.11.0",
    "@types/jest": "^29.5.2",
    "drizzle-kit": "^0.18.1",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.0.2",
    "wrangler": "^2.20.0"
  }
}
